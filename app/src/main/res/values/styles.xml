<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="rippleColor">@color/whiteAlpha</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="CustomDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>

    </style>
</resources>